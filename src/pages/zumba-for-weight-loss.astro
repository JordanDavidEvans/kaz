---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = 'Zumba for Weight Loss in Murwillumbah | Kazumbah Zumba';
const description = 'Is Zumba good for weight loss? See calorie burn, weekly plans and how our Murwillumbah classes help you get results fast.';

const breadcrumb = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {"@type": "ListItem", "position": 1, "name": "Home", "item": "https://kazumbah.com.au/"},
    {"@type": "ListItem", "position": 2, "name": "Zumba for Weight Loss", "item": "https://kazumbah.com.au/zumba-for-weight-loss/"}
  ]
};

const faq = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {"@type": "Question", "name": "Does Zumba help you lose weight?", "acceptedAnswer": {"@type": "Answer", "text": "Yes, regular Zumba sessions can burn significant calories and support weight loss."}},
    {"@type": "Question", "name": "How many times a week should I do Zumba?", "acceptedAnswer": {"@type": "Answer", "text": "Aim for 3 classes a week for steady progress."}}
  ]
};
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <script type="application/ld+json">{JSON.stringify(breadcrumb)}</script>
    <script type="application/ld+json">{JSON.stringify(faq)}</script>
  </head>
  <body>
    <Header />
    <main>
      <h1>Zumba for Weight Loss</h1>
      <p>Burn calories and stay motivated with energetic dance workouts. Our <a href="/zumba-classes-murwillumbah/">Murwillumbah classes</a> combine cardio and strength for fast results.</p>
      <h2>Weekly Plan</h2>
      <p>Try three classes a week paired with balanced meals.</p>
      <h2>Calorie Burn</h2>
      <table>
        <tr><th>Intensity</th><th>Approx. Calories/Hour</th></tr>
        <tr><td>Low</td><td>300</td></tr>
        <tr><td>High</td><td>600+</td></tr>
      </table>
      <h2>FAQs</h2>
      <dl>
        <dt>Does Zumba help you lose weight?</dt>
        <dd>Yes, when combined with healthy eating and regular sessions.</dd>
        <dt>How many times a week should I do Zumba?</dt>
        <dd>Three classes per week is a good starting point.</dd>
      </dl>
      <p>New to dance fitness? Read our <a href="/zumba-for-beginners/">beginner guide</a> or view the <a href="/timetable/">class timetable</a>.</p>
    </main>
    <Footer />
  </body>
</html>
