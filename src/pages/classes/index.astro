---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

const pageTitle = `${SITE_TITLE} – Classes`;
---

<!doctype html>
<html lang="en">
        <head>
                <BaseHead title={pageTitle} description="Explore our range of Zumba classes." />
        </head>
        <body>
                <Header />
                <main>
                        <h1>Our Zumba Classes</h1>
                        <ul>
                                <li><a href="/classes/adults">Adults</a> – high-energy routines for all fitness levels.</li>
                                <li><a href="/classes/kids">Kids</a> – fun dances to keep children active.</li>
                                <li><a href="/classes/active-older-adults">Active Older Adults</a> – low-impact moves to stay fit.</li>
                                <li><a href="/classes/seated-chair">Seated Chair</a> – gentle seated sessions for mobility support.</li>
                        </ul>
                </main>
                <Footer />
        </body>
</html>

