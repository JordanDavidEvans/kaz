---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": SITE_TITLE,
  "description": SITE_DESCRIPTION,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Murwillumbah",
    "addressRegion": "NSW",
    "addressCountry": "AU"
  },
    "telephone": "+61-422-233-836"
};
const breadcrumb = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {"@type": "ListItem", "position": 1, "name": "Home", "item": "https://kazumbah.com.au/"}
  ]
};
---

<!doctype html>
<html lang="en">
        <head>
                <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
                <script type="application/ld+json">{JSON.stringify(structuredData)}</script>
                <script type="application/ld+json">{JSON.stringify(breadcrumb)}</script>
        </head>
        <body>
                <Header />
                <main>
                        <h1>Zumba Classes in Murwillumbah</h1>
                        <p>Join Kazumbah for fun, high-energy dance workouts for Adults, Kids and Active Older Adults, with a seated chair option for gentle movement.</p>
                        <ul>
                                <li>Weekly classes at Murwillumbah Community Centre</li>
                                <li>First class free for new members</li>
                                <li>No dance experience required</li>
                        </ul>
                        <p><a href="#contact">Contact us</a> to book your spot and start moving today!</p>
                </main>
                <Footer />
        </body>
</html>
