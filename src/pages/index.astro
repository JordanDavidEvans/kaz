---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": SITE_TITLE,
  "description": SITE_DESCRIPTION,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Murwillumbah",
    "addressRegion": "NSW",
    "addressCountry": "AU"
  },
  "telephone": "+61-400-000-000"
};
---

<!doctype html>
<html lang="en">
        <head>
                <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
                <script type="application/ld+json">{JSON.stringify(structuredData)}</script>
        </head>
        <body>
                <Header />
                <main>
                        <h1>Zumba Classes in Murwillumbah</h1>
                        <p>Join Murwillumbah Zumba Fitness for fun, high-energy dance workouts that suit all ages and fitness levels.</p>
                        <ul>
                                <li>Weekly classes at Murwillumbah Community Centre</li>
                                <li>First class free for new members</li>
                                <li>No dance experience required</li>
                        </ul>
                        <p><a href="#contact">Contact us</a> to book your spot and start moving today!</p>
                </main>
                <Footer />
        </body>
</html>
