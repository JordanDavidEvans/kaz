---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
        <nav>
                <h2><a href="/"><img src="https://www.zumba.com/img/blt/zumba-logo.svg" alt="Zumba logo" class="logo" /> {SITE_TITLE}</a></h2>
                <div class="internal-links">
                        <HeaderLink href="/zumba-classes-murwillumbah/">Classes</HeaderLink>
                        <HeaderLink href="/timetable/">Timetable</HeaderLink>
                        <HeaderLink href="/zumba-for-beginners/">Beginners</HeaderLink>
                        <HeaderLink href="/zumba-for-seniors/">Seniors</HeaderLink>
                        <HeaderLink href="/zumba-classes-murwillumbah/#pricing">Pricing</HeaderLink>
                        <HeaderLink href="#contact">Contact</HeaderLink>
                </div>
        </nav>
</header>
<style>
        header {
                margin: 0;
                padding: 0 1em;
                background: white;
                box-shadow: 0 2px 8px rgba(var(--black), 5%);
        }
        h2 {
                margin: 0;
                font-size: 1em;
        }

        .logo {
                height: 40px;
                vertical-align: middle;
                margin-right: 0.5em;
        }

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
</style>
